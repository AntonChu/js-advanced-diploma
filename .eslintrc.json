{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-plusplus": "off",
        "max-len": ["error", { "code": 150 }],
        "no-restricted-syntax": ["error", "WithStatement"],
        "prefer-destructuring": ["error", {"object": true, "array": false}],
        "class-methods-use-this": ["error", { "exceptMethods": ["showInfo", "availableAction"] }]
    }
}
